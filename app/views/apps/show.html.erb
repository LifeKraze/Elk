<h1>Builds for <%= @app.name %></h1>

<br />

<p>
  <%= link_to "+ new build", new_build_path, :class => "visible-desktop" %>
</p>

<p>
  <%= link_to "Users", app_users_path(:appname => @app.name), :class => "visible-desktop" %>
</p>

<br />
<br />

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>View</th>
      <th>
        <span class="visible-desktop">
          Date
        </span>
      </th>
      <th>Version</th>
      <th>
        <span class="visible-desktop">
          Release notes
        </span>
      </th>
      <th>
        <span class="hidden-desktop">
          Install
        </span>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @app.builds.each do |build| %>
      <tr>
        <td>
          <%= link_to "View", app_build_path(:appname => @app.name, :build_id => build.id) %>
        </td>
        <td>
          <span class="visible-desktop">
            <%= build.friendly_create_at %>
          </span>
        </td>
        <td><%= "#{build.version} (##{build.build_number})" %></td>
        <td>
          <span class="visible-desktop">
            <%= build.release_notes %>
          </span>
        </td>
        <td>
          <span class="hidden-desktop">
            <a href="itms-services://?action=download-manifest&url=<%= AppConfig.host + build.plist_url %>" class="btn btn-primary">
              Install
            </a>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

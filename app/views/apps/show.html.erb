<h1>Builds for <%= @app.name %></h1>

<br />

<%= link_to "+ new build", new_build_path %>

<br />
<br />

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Version (build #)</th>
      <th>Release notes</th>
      <th><span class="hidden-desktop">Install</span></th>
    </tr>
  </thead>
  <tbody>
    <% @app.builds.each do |build| %>
      <tr>
        <td>
          <%= build.friendly_create_at %>
        </td>
        <td>
          <%= "#{build.version} (##{build.build_number})" %>
        </td>
        <td>
          <%= build.release_notes %>
        </td>
        <td>
          <a href="itms-services://?action=download-manifest&url=<%= Rails.configuration.root_domain + build.plist_url %>" class="btn btn-primary hidden-desktop">
            Install
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
